---
import Logo from "../Logo.astro";
import Navigator from "./Navigator.astro";
import BlockActions from "./BlockActions.astro";
import NavSocial from "./NavSocial.astro";
import LinkWatchDesign from "../Link/LinkWatchDesign.astro";
import BackgroundImage from "./images/watch_big.png";

import Image from "astro/components/Image.astro";

---

<header class="header-block">
  <div class="header container">
    <section class="header-top header-top_margin-right margin_left">
      <Logo class="logo-header" />
      <div class="header-menu">
        <Navigator />
        <BlockActions />
      </div>
    </section>
    <section class="hero-block">

      <div class="hero">
        <NavSocial data-navsocial="open"/>
        <section class="margin_left">
          <header class="hero-header">
            <h1 class="hero__title">
              <span class="hero__title-line">Find your</span>
              <span class="hero__title-line">dream watch</span></h1>
            <p class="hero__subtitle">
              Opening Soon --- At Volumenzeit, we have a range of stunningly
              designed watches a perfect life companion expressing your unique
              sense of style --- Opening Soon
            </p>
            <LinkWatchDesign class="link-design link-design_blue link-design_big" />
            <NavSocial data-navsocial="close"/>
          </header>
        </section>
      </div>

    </section>
  </div>
  <Image class="header-img" src={BackgroundImage} alt="ddd"></Image>
</header>

<style>
  .hero {
    position: relative;
    height: inherit;
    z-index: 2;
  }

  .hero-header {
    position: relative;
    max-width: min-content;
    padding-top: 150px;
    /* padding-top: clamp(2.5rem, -0.07664rem + 10.849vw, 9.6875rem); */
    height: min-content;
  }

  .hero__title {
    font-family: var(--font-SpaceAge);
    /*720-40 1440-60*/
    font-size: clamp(2.5rem, 1.07152rem + 2.976vw, 3.75rem);
    line-height: 80%;
    color: var(--color-black);
  }

  .hero__title-line {
    text-wrap: nowrap;
  }

  .hero__subtitle {

    font-size: 14px;
    line-height: 200%;
    /*720-30 1440-25*/
    margin-top: clamp(1.5625rem, 2.23212rem - 0.744vw, 1.875rem);
    /*720-40 1440-30*/
    margin-bottom: clamp(2.5rem, 3.21424rem + -1.488vw, 1.875rem);
  }

  /*----------------------------*/
  .header-block {
    position: relative;
    width: 100vw;
    height: 100vh;
    background-color: var(--color-ghost-white);
    overflow: hidden;
  }

  .header {
    height: inherit;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
  }

  .header-top {
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 5.375em;
  }

  .header-top_margin-right {
    margin-right: clamp(1.125rem, -4.6875rem + 9.375vw, 3.75rem);
  }

  .header-top_margin-left {
    margin-left: clamp(1.125rem, -4.6875rem + 9.375vw, 3.75rem);
  }

  .header-menu {
    display: flex;
    align-items: center;
    column-gap: 40px;
  }

  .header-img {
    position: absolute;
    bottom: 0;
    right: 0;
    max-width: 1060px;
    width: 55vw;
    min-width: 820px;
    height: auto;
    z-index: 0;
  }
</style>
