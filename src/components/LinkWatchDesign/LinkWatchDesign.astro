---
const href = {
  href: "/watchdesign",
  title: "Build your Watch",
};

export type Props = {
  ["class"]?: string;
};

const { ["class"]: className = "" } = Astro.props;
// console.log({ className });
---

<a class:list={[className]} href={href.href} title={href.title}>
  Design you watch
</a>
<style>
  .link-design {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: var(--font-Poppins);
    font-weight: 400;
    letter-spacing: normal;
    /* 1440-14px 992-11px*/
    font-size: clamp(0.6875rem, 0.2721rem + 0.67vw, 0.875rem);
    line-height: 86%;
    color: var(--color-white);

    text-transform: capitalize;
    text-wrap: nowrap;
    text-align: center;
    border-radius: 0.36em;
    transition: all 0.5s ease;
  }

  /* .link-design:hover {
    background: var(--color-grey);
    transform: scale(1.02);
    transition: all 0.5s ease;
  } */

  .link-design_blue {
    background: var(--color-blue);
  }

  .link-design_black {
    background: var(--color-black);
    transition: all 1s ease;

  }

  .link-design_black:hover {
    background: var(--color-white);
    transition: all 1s ease;

  }

  .link-design_black:hover.link-design{
    color: var(--color-black);
    transition: all 1s ease;
  }

  .link-design_xl {
    padding-left: 58px;
    padding-right: 58px;
  }

  .link-design_big {
    padding: 0px 0px;
  }

  .link-design_w208 {
    font-size: 14px;
    width: 208px;
    padding: 22px 38px;
  }



  .link-design_small {
    --left-right: clamp(1.125rem, -0.8125rem + 3.125vw, 2rem);
    --top-bottom: clamp(1.125rem, 0.57134rem + 0.893vw, 1.375rem);
    padding: var(--top-bottom) var(--left-right);
    max-width: 10.9375rem;
    min-width: 8.75rem;
  }

  /* From Uiverse.io by mrhyddenn */
</style>
